<Window x:Class="WpfApp11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регулярные выражения" Height="400" Width="600">

    <Grid>
        <TextBlock Text="Введите строку:" Margin="10" FontWeight="Bold"/>
        <!-- Заголовок для ввода строки -->
        <TextBox x:Name="inputTextBox" Margin="10,30,10,0" Height="30"/>
        <!-- Поле для ввода строки -->

        <Button Content="Найти 2+3" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="10,70,0,0" Click="FindExpression1_Click"/>
        <!-- Кнопка для поиска первого выражения -->

        <Button Content="Найти abba" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="150,70,0,0" Click="FindExpression2_Click"/>
        <!-- Кнопка для поиска второго выражения -->

        <ListBox x:Name="resultsListBox" Margin="10,110,10,60"/>
        <!-- Список для отображения результатов -->

        <Button Content="Выход" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Click="ExitButton_Click"/>
        <!-- Кнопка выхода -->

        <Button Content="О программе" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="100" Click="AboutButton_Click"/>
        <!-- Кнопка о программе -->
    </Grid>
</Window>
